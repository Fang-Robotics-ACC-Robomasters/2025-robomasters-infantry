{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Build Tests - Debug",
            "program": "${workspaceFolder}/infantry-project/build/tests/scons-debug/infantry-project-tests.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug Sim",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Build Sim - Debug",
            "program": "${workspaceFolder}/infantry-project/build/sim/scons-debug/infantry-project.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug Hardware",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Program - Debug",
            "executable": "./infantry-project/build/hardware/scons-debug/infantry-project.elf",
            "device": "STM32F427II",
            "configFiles": [
                "./infantry-project/openocd.cfg"
            ]
        }
    ]
}